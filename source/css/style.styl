/* === Font variables === */

$bold = proxima_nova_rgbold, Helvetica Neue, Helvetica, Arial, sans-serif
$semibold = proxima_novasemibold, Helvetica Neue, Helvetica, Arial, sans-serif
$paragraph = proxima_nova_rgregular, Helvetica Neue, Helvetica, Arial, sans-serif

/* ===================== Global start ====================== */

body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  animation: fade 0.6s ease-in-out

.logo
  margin-top 60px
  margin-bottom 60px

.wrapper
  width 960px
  margin 0 auto


/* ===================== Global end ====================== */



/* ===================== Index start ====================== */

.video
  margin-top 30px

.hmw-wrapper
  margin-bottom 50px

.largeWell
  margin-top 30px
  margin-bottom 30px
  text-align center
  max-width 960px
  h1
    font-size 40px
    color black
    font-family $semibold
  h2
    font-size 18px
    color #2c2c2c
    font-family $paragraph
  a
    text-decoration none

.hmw
  margin-top 20px
  .post
    height 200px
  .thumb
    transition box-shadow 0.3s ease
    &:hover
      box-shadow 2px 2px 15px #0f0f0f

.modalFormat
  padding 10px 30px 30px 30px

.modal-idea
  h1
    color black
    font-family $semibold
  p
    font-family $paragraph
    color black
  a > p
    color dodgerblue
    text-decoration none


/* ===================== Index end ====================== */



/* ===================== Idea start ====================== */

.article
  margin-bottom 40px
  h1
    font-family $bold
  p
    color black
    font-size 16px
    line-height 31px
    font-family $paragraph
    max-width 960px
  img
    margin 30px 0px 30px 0px
    border-radius 10px

.share
  margin-bottom 70px

.icon
  width 35px
  transition width 0.1s ease
  &:hover
    width 42px

#social
  margin-top 20px
  margin-bottom 30px
  img
    display inline
    margin 0 10px

.back-btn
  width 80px
  height 50px
  border 2px solid #5f5f5f
  border-radius 10px
  padding-top 13px
  margin 0 auto
  transition background-color 0.1s ease
  p
    color #313131
    font-family $semibold
  &:hover
    background-color #5f5f5f
    p
      color #ffffff

@keyframes fade
  0%   { opacity: 0; }
  100% { opacity: 1; }

/* ===================== Idea end ====================== */



/* ===================== Footer start ====================== */

footer
  height 190px
  background-color #3b3b3b
  padding-top 35px
  li
    list-style none
    p
      color #ffffff
      font-family $paragraph
  .footer-right
    margin-top 60px
    text-align right
  .footer-nav
    margin-left 90px
    margin-bottom 90px

/* ===================== Footer end ====================== */